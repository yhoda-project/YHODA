# Yorkshire Vitality Observatory — Environment Variable Template
# Copy this file to .env and fill in real values.
# NEVER commit .env to version control.

# ---------------------------------------------------------------------------
# Database
# ---------------------------------------------------------------------------
# SQL Server connection string (pyodbc URL format)
# Example: mssql+pyodbc://user:password@host/database?driver=ODBC+Driver+18+for+SQL+Server
SQL_SERVER_CONNECTION_STRING=mssql+pyodbc://user:password@host/database?driver=ODBC+Driver+18+for+SQL+Server

# ---------------------------------------------------------------------------
# API Keys
# ---------------------------------------------------------------------------
# NOMIS (ONS Labour Market Statistics API) — optional for public endpoints
NOMIS_API_KEY=

# DWP Stat-Xplore API key — required
DWP_API_KEY=your-dwp-api-key-here

# ---------------------------------------------------------------------------
# Prefect
# ---------------------------------------------------------------------------
# URL of your self-hosted Prefect server
PREFECT_API_URL=http://your-prefect-server:4200/api

# Work pool name (must exist on the Prefect server)
PREFECT_WORK_POOL=yhovi-default

# ---------------------------------------------------------------------------
# Logging
# ---------------------------------------------------------------------------
# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO
